{% extends 'base.html.twig' %}

{% block title %}Ajout de produit{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajout de produit</h1>

    {{form_start(formProd)}}
        {{form_row(formProd.name)}}
        {{form_row(formProd.price)}}
        {{form_row(formProd.description)}}
        {{form_row(formProd.category)}}
        <button type="submit" class="btn btn-primary">{{ button_label|default('Ajouter')}}</button>
    {{ form_end(formProd) }}
</div>
{% endblock %}
